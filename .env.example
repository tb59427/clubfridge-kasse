# -------------------------------------------------------
# Clubfridge Kasse â€“ Konfiguration
# Kopieren nach .env und anpassen
# -------------------------------------------------------

# Cloud Server
SERVER_URL=https://api.clubfridge.example.com
TENANT_SLUG=meinverein
API_KEY=<register_id>.<secret>   # Ausgabe beim Anlegen der Kasse im Admin-UI

# Hardware
RFID_DEVICE=/dev/input/event0        # evdev-Pfad des RFID-Lesers
BARCODE_DEVICE=/dev/input/event1     # evdev-Pfad des Barcode-Scanners

# Magnetschloss-Relais (optional)
HAS_RELAY=false
RELAY_GPIO_PIN=18
RELAY_OPEN_DURATION_MS=3000

# Lokale Datenbank (SQLite)
LOCAL_DB_PATH=kasse_local.db

# Sync-Intervall
SYNC_INTERVAL_SECONDS=60
CACHE_REFRESH_INTERVAL_SECONDS=300

# Display
FULLSCREEN=false
WINDOW_WIDTH=1024
WINDOW_HEIGHT=600
